@model MyMCE.Models.Domain.Designations.tbl_MCE_Designations

@{
    ViewBag.Title = "CreateDesignationWithTab";
    Layout = "~/Views/Shared/_LayoutAdminLte.cshtml";
}

<script src="~/adminlte/js/sweet-alert.init.js"></script>
<script src="~/adminlte/js/sweetalert.min.js"></script>
<script src="~/adminlte/js/sweetalert2.all.min.js"></script>

@if (TempData["Success"] != null)
{
    <script type="text/javascript">
                            swal.fire(
                                {
                                    title: '@TempData["Success"]',
                                    type: 'success'
                                });
    </script>

}


@section Scripts {
    <script type="text/javascript" language="javascript">
        $(function () {

            $("#btnSubmit").click(function () {

                if (confirm("Are you sure you want to Save changes?")) {
                    return true;
                } else {
                    return false;
                }

            });
        });
    </script>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <!-- Main content -->
    <section class="content">

        <div class="row">

            <div class="col-12 col-sm-12">
                <div class="card card-primary card-outline card-outline-tabs">
                    <div class="card-header p-0 border-bottom-0">
                        <ul class="nav nav-tabs">
                            <li class="nav-item">
                                <a class="nav-link active">New Designation</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Designation/ViewDesignationDataTableWithTab">View Designation</a>
                            </li>


                        </ul>
                    </div>
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="tab-pane fade show active" id="custom-tabs-new-designation">
                                <div class="row">

                                    <div class="col-sm-4">
                                        <!-- text input -->
                                        <div class="form-group">

                                            @Html.LabelFor(model => model.vchDesignation)
                                            @Html.EditorFor(model => model.vchDesignation, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.vchDesignation, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">

                                            @Html.LabelFor(model => model.vchDesignationDescription)

                                            @Html.EditorFor(model => model.vchDesignationDescription, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.vchDesignationDescription, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="col-sm-4">
                                        <div class="form-group">

                                            @Html.LabelFor(model => model.vchRemarks)

                                            @Html.EditorFor(model => model.vchRemarks, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.vchRemarks, "", new { @class = "text-danger" })


                                        </div>
                                    </div>

                                </div>

                                <div class="row">
                                    <div class="col-sm-3">
                                        <input type="submit" value="Create" id="btnSubmit" class="btn btn-info" />
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-3">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    </div>
                                </div>



                            </div>
                            <!-- /.tab-pane -->
                            <div class="tab-pane" id="View">

                            </div>

                            <!-- /.tab-pane -->
                        </div>
                        <!-- /.tab-content -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div>

    </section>


}
