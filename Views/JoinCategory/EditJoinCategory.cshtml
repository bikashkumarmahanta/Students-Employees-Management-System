@model MyMCE.Models.Domain.JoinCategory.tbl_MCE_JoinCategory

@{
    ViewBag.Title = "EditJoinCategory";
    Layout = "~/Views/Shared/_LayoutAdminLte.cshtml";
}

<script src="~/adminlte/js/sweet-alert.init.js"></script>
<script src="~/adminlte/js/sweetalert.min.js"></script>
<script src="~/adminlte/js/sweetalert2.all.min.js"></script>


@section Scripts {
    <script type="text/javascript" language="javascript">
        $(function () {

            $("#btnSubmit").click(function () {

                if (confirm("Are you sure you want to Save changes?")) {
                    return true;
                } else {
                    return false;
                }

            });
        });
    </script>
}

@using (Html.BeginForm("EditJoinCategory", "JoinCategory", FormMethod.Post, new { @id = "CreateForm" }))
{
    @Html.AntiForgeryToken()
    <!-- Default box -->
    <div class="card">
        <div class="card-header">

            <h3 class="card-title">Edit JoinCategory</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <!-- card-body -->
        <div class="card-body">
            <div class="tab-content">
                <div class="active tab-pane" id="Edit">


                    <div class="row">
                        <div class="col-sm-3">
                            <div class="form-group">

                                @Html.LabelFor(model => model.intLevelID)

                                @Html.DropDownListFor(Model => Model.intLevelID, new SelectList(ViewBag.levelList as System.Collections.IEnumerable, "intLevelID", "vchLevelName", ViewBag.DefaultBrand),
                                               "Select a Course",  htmlAttributes: new { @class = "form-control ", @disabled = "disabled" })

                                @Html.HiddenFor(Model => Model.intLevelID)

                                @Html.ValidationMessageFor(model => model.intLevelID, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="col-sm-3">
                            <!-- text input -->
                            <div class="form-group">
                                @Html.HiddenFor(model => model.intJoinCategoryID)


                                @Html.LabelFor(model => model.vchJoinCategoryType)

                                @Html.EditorFor(model => model.vchJoinCategoryType, new { htmlAttributes = new { @class = "form-control " } })
                                @Html.ValidationMessageFor(model => model.vchJoinCategoryType, "", new { @class = "text-danger" })

                            </div>
                        </div>


                        <div class="col-sm-3">
                            <div class="form-group">

                                @Html.LabelFor(model => model.vchDescription)

                                @Html.EditorFor(model => model.vchDescription, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.vchDescription, "", new { @class = "text-danger" })

                            </div>
                        </div>

                        <div class="col-sm-3">
                            <div class="form-group">

                                @Html.LabelFor(model => model.vchRemarks)

                                @Html.EditorFor(model => model.vchRemarks, new { htmlAttributes = new { @class = "form-control " } })
                                @Html.ValidationMessageFor(model => model.vchRemarks, "", new { @class = "text-danger" })

                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-sm-3">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                    </div>



                </div>
                <!-- /.tab-pane -->
                <div class="tab-pane" id="View">

                </div>

                <!-- /.tab-pane -->
            </div>
            <!-- /.tab-content -->
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <input type="submit" value="Update" id="btnSubmit" class="btn btn-info" />
            <h3 class="btn btn-default float-right">@Html.ActionLink("Back to List", "JoinCategoryDataTable")</h3>

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->
}















