@model MyMCE.Models.Domain.GlobalLink.tbl_MCE_GlobalLink

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdminLte.cshtml";
}


<script src="~/adminlte/js/sweet-alert.init.js"></script>
<script src="~/adminlte/js/sweetalert.min.js"></script>
<script src="~/adminlte/js/sweetalert2.all.min.js"></script>

@if (TempData["Success"] != null)
{

    <script type="text/javascript">
                                swal.fire(
                                    {
                                        title: '@TempData["Success"]',
                                        type: 'success'
                                    });
    </script>
}



@section Scripts {
    <script type="text/javascript" language="javascript">
        $(function () {

            $("#btnSubmit").click(function () {

                if (confirm("Are you sure you want to Save changes?")) {
                    return true;
                } else {
                    return false;
                }

            });
        });
    </script>
}

@using (Html.BeginForm("EditGlobalLink", "Globallink", FormMethod.Post, new { @id = "CreateForm" }))
{
    @Html.AntiForgeryToken()

    <!-- Default box -->
    <div class="card">
        <div class="card-header">

            <h3 class="card-title">Edit Globallink</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <!-- card-body -->
        <div class="card-body">
            <div class="tab-content">
                <div class="active tab-pane" id="Add">
                    <div class="row">
                        <div class="col-sm-3">
                            <!-- text input -->
                            <div class="form-group">
                                @Html.HiddenFor(model => model.intGLinkID)

                                @Html.LabelFor(model => model.vchGLinkName)
                                @Html.EditorFor(model => model.vchGLinkName, new { htmlAttributes = new { @class = "form-control form-control-sm", @disabled = "disabled" } })
                                <!-- As desabled control can not return the value to controller hence hiddent field is used to return the value -->
                                @Html.HiddenFor(model => model.vchGLinkName)
                                @Html.ValidationMessageFor(model => model.vchGLinkName, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">

                                @Html.LabelFor(model => model.intSortNum)

                                @Html.EditorFor(model => model.intSortNum, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                @Html.ValidationMessageFor(model => model.intSortNum, "", new { @class = "text-danger" })

                            </div>
                        </div>

                        <div class="col-sm-3">
                            <div class="form-group">

                                @Html.LabelFor(model => model.bitHomePage)


                                @Html.DropDownListFor(Model => Model.bitHomePage, new SelectList(ViewBag.home_Page as System.Collections.IEnumerable, "vchValue", "vchText"),
                                               "Select a Subject Type", htmlAttributes: new { @class = "form-control form-control-sm", @disabled = "disabled" })
                                @Html.HiddenFor(Model => Model.bitHomePage)
                                @Html.ValidationMessageFor(model => model.bitHomePage, "", new { @class = "text-danger" })

                            </div>
                        </div>

                        <div class="col-sm-3">
                            <div class="form-group">

                                @Html.LabelFor(model => model.vchIcon)

                                @Html.EditorFor(model => model.vchIcon, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                @Html.ValidationMessageFor(model => model.vchIcon, "", new { @class = "text-danger" })

                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-sm-3">
                            <!-- text input -->
                            <div class="form-group">

                                @Html.LabelFor(model => model.vchRemarks)

                                @Html.EditorFor(model => model.vchRemarks, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                @Html.ValidationMessageFor(model => model.vchRemarks, "", new { @class = "text-danger" })

                            </div>
                        </div>


                    </div>




                    <div class="row">
                        <div class="col-sm-3">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                    </div>



                </div>
                <!-- /.tab-pane -->
                <div class="tab-pane" id="View">

                </div>

                <!-- /.tab-pane -->
            </div>
            <!-- /.tab-content -->
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <input type="submit" value="Update" id="btnSubmit" class="btn btn-info" />



            <h3 class="btn btn-default float-right">@Html.ActionLink("Back to List", "GlobalLinkDataTable")</h3>

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->
}








