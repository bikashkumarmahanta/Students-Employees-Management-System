@model MyMCE.Models.Domain.GroupLinkAccess.tbl_MCE_GroupLinkAccess

@{
    ViewBag.Title = "GroupLinkAccessDetails";
    Layout = "~/Views/Shared/_LayoutAdminLte.cshtml";
}

<script src="~/adminlte/js/sweet-alert.init.js"></script>
<script src="~/adminlte/js/sweetalert.min.js"></script>
<script src="~/adminlte/js/sweetalert2.all.min.js"></script>


@section Scripts {
    <script type="text/javascript" language="javascript">
        $(function () {

            $("#btnSubmit").click(function () {

                if (confirm("Are you sure you want to Save changes?")) {
                    return true;
                } else {
                    return false;
                }

            });
        });
    </script>
}



@Html.AntiForgeryToken()

<!-- Default box -->
<div class="card">
    <div class="card-header">

        <h3 class="card-title">Details </h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <!-- card-body -->
    <div class="card-body">
        <div class="tab-content">
            <div class="active tab-pane" id="Add">
                <div class="row">
                    <div class="col-sm-3">
                        <!-- text input -->
                        <div class="form-group">

                            @Html.HiddenFor(model => model.intGroupLinkAccessID)


                            @Html.LabelFor(model => model.vchGroupLinkAccessName)
                            @Html.EditorFor(model => model.vchGroupLinkAccessName, new { htmlAttributes = new { @class = "form-control ", @disabled = "disabled" } })
                            @Html.HiddenFor(model => model.vchGroupLinkAccessName)
                            @Html.ValidationMessageFor(model => model.vchGroupLinkAccessName, "", new { @class = "text-danger" })




                        </div>
                    </div>
                    <div class="col-sm-3">
                        <!-- text input -->
                        <div class="form-group">




                            @Html.LabelFor(model => model.vchDescription)
                            @Html.EditorFor(model => model.vchDescription, new { htmlAttributes = new { @class = "form-control ", @disabled = "disabled" } })
                            @Html.HiddenFor(model => model.vchDescription)
                            @Html.ValidationMessageFor(model => model.vchDescription, "", new { @class = "text-danger" })
                            <!-- As desabled control can not return the value to controller hence hiddent field is used to return the value -->

                        </div>
                    </div>

                    <div class="col-sm-3">
                        <div class="form-group">


                            @Html.LabelFor(model => model.vchPLinkName)
                            @Html.EditorFor(model => model.vchPLinkName, new { htmlAttributes = new { @class = "form-control ", @disabled = "disabled" } })
                            @Html.HiddenFor(model => model.vchPLinkName)
                            @Html.ValidationMessageFor(model => model.vchPLinkName, "", new { @class = "text-danger" })
                            <!-- As desabled control can not return the value to controller hence hiddent field is used to return the value -->


                        </div>
                    </div>


                    <div class="col-sm-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.vchRemarks)
                            @Html.EditorFor(model => model.vchRemarks, new { htmlAttributes = new { @class = "form-control ", @disabled = "disabled" } })
                            @Html.HiddenFor(model => model.vchRemarks)
                            @Html.ValidationMessageFor(model => model.vchRemarks, "", new { @class = "text-danger" })



                        </div>
                    </div>

                </div>



                <div class="row">
                    <div class="col-sm-3">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                </div>



            </div>
            <div class="tab-pane" id="View">

            </div>

            <!-- /.tab-pane -->
        </div>
        <!-- /.tab-content -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">

       




        <h3 class="btn btn-default float-right">@Html.ActionLink("Back to List", "ViewGroupLinkAccessDataTableWithSearchPanel")</h3>

    </div>
    <!-- /.card-footer-->
</div>
<!-- /.card -->
