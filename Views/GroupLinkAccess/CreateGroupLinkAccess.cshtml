@model MyMCE.Models.Domain.GroupLinkAccess.tbl_MCE_GroupLinkAccess

@{
    ViewBag.Title = "CreateGroupLinkAccess";
    Layout = "~/Views/Shared/_LayoutAdminLte.cshtml";
}



@*<script src="~/Scripts/jquery-3.3.1.min.js"></script>*@
<script src="~/adminlte/js/sweet-alert.init.js"></script>
<script src="~/adminlte/js/sweetalert.min.js"></script>
<script src="~/adminlte/js/sweetalert2.all.min.js"></script>


@section Scripts {


    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript" language="javascript">
        $(function () {

            $("#btnSubmit").click(function () {

                if (confirm("Are you sure you want to Add GroupLinkAccess?")) {
                    return true;
                } else {
                    return false;
                }

            });
        });
    </script>
}

@if (TempData["Success"] != null)
{
    <script type="text/javascript">
                                swal.fire(
                                    {
                                        title: '@TempData["Success"]',
                                        type: 'success'
                                    });
    </script>

}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <section class="content">
        <div class="row">
            <div class="col-12 col-sm-12">
                <div class="card card-primary card-outline card-outline-tabs">
                    <div class="card-header p-0 border-bottom-0">
                        <ul class="nav nav-tabs">
                            <li class="nav-item">
                                <a class="nav-link active">New GroupLinkAccess</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/GroupLinkAccess/ViewGroupLinkAccessDataTable">View GroupLinkAccess</a>
                            </li>


                        </ul>
                    </div>



                    <!-- Default box -->

                    <div class="card-header">

                        <h3 class="card-title">Add</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <!-- card-body -->
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="active tab-pane" id="Add">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <div class="form-group">


                                            @Html.LabelFor(model => model.vchGroupLinkAccessName)

                                            @Html.EditorFor(model => model.vchGroupLinkAccessName, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.vchGroupLinkAccessName, "", new { @class = "text-danger" })




                                        </div>
                                    </div>

                                    <div class="col-sm-3">
                                        <!-- text input -->
                                        <div class="form-group">


                                            @Html.LabelFor(model => model.intRoleID)

                                            @Html.DropDownListFor(Model => Model.intRoleID, new SelectList(ViewBag.RoleList as System.Collections.IEnumerable, "intRoleID", "vchDescription"),
                                                           "Select a Function Name", htmlAttributes: new { @class = "form-control " })

                                            @Html.ValidationMessageFor(model => model.intRoleID, "", new { @class = "text-danger" })




                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="form-group">

                                            @Html.LabelFor(model => model.intPLinkID)

                                            @Html.DropDownListFor(Model => Model.intPLinkID, new SelectList(ViewBag.PlinkList as System.Collections.IEnumerable, "intPLinkID", "vchPLinkName"),
                                                           "Select a Primary Link", htmlAttributes: new { @class = "form-control " })

                                            @Html.ValidationMessageFor(model => model.intPLinkID, "", new { @class = "text-danger" })




                                        </div>
                                    </div>



                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.vchRemarks)

                                            @Html.EditorFor(model => model.vchRemarks, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.vchRemarks, "", new { @class = "text-danger" })


                                        </div>
                                    </div>

                                </div>






                                <div class="row">
                                    <div class="col-sm-3">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    </div>
                                </div>



                            </div>
                            <!-- /.tab-pane -->
                            <div class="tab-pane" id="View">

                            </div>

                            <!-- /.tab-pane -->
                        </div>
                        <!-- /.tab-content -->
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <input type="submit" value="Create" id="btnSubmit" class="btn btn-info" />

                        @*<h3 class="btn btn-default float-right">@Html.ActionLink("Back to List", "ViewGroupLinkAccessDataTable")</h3>*@

                    </div>
                    <!-- /.card-footer-->


                </div>
            </div>
        </div>
    </section>
}

